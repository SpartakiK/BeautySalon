@model IEnumerable<Domain.Models.OrderDetailModel>

@{
    ViewData["Title"] = "OrderDetails";
}
<div class="container">
    <h4>Order Details:</h4>
    <a class="btn btn-secondary" href="javascript:history.back()">Go Back</a>
    <table class="table" style="background-color: #E7E5DC ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Service.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comission)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreationDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comission)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteOrderDetail", new { orderdetailid = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>